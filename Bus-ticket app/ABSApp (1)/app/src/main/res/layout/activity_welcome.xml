<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splashback"
    tools:context=".welcome">

    <ImageView
        android:id="@+id/arulogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginTop="-110dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fulllog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edition">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Login"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/purple_0"/>

            <EditText
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edition"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_extralight"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edition"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_extralight"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="@color/black" />
            <Switch
                android:id="@+id/active"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:trackTint="@color/purple"
                android:thumbTint="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                android:outlineAmbientShadowColor="@color/purple"
                android:textColor="@color/black"
                android:shadowColor="@color/purple"
                android:text="Remeber me" />

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple_0"
                android:fontFamily="@font/poppins_light"
                android:text="Login"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/textregd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginbutton"
                android:background="@drawable/custom_edition"
                android:fontFamily="@font/poppins_light"
                android:padding="8dp"
                android:text="Signup"
                android:textAlignment="center"
                android:textColor="@color/purple_0"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="150dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>







</RelativeLayout>