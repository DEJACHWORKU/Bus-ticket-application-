<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".traficdashboard"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Traffic control dashboard"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/loginText"
        android:id="@+id/Card3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/recImage3"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:scaleType="centerCrop"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recTitle3"
                android:layout_below="@id/recImage3"
                android:text="Manage User"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/Card3"
        android:id="@+id/Card4"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/recImage4"
                android:layout_marginLeft="150dp"
                android:src="@drawable/ic_baseline_place_24"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />


            <TextView
                android:layout_below="@id/recImage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recTitle4"
                android:text="Manage Places"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/Card4"
        android:id="@+id/Card5"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/recImage5"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />


            <TextView
                android:layout_below="@+id/recImage5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recTitle5"
                android:text="Manage Orders"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"

                             />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/Card5"
        android:id="@+id/Card6"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/recImage6"
                android:src="@drawable/ic_baseline_notifications_active_24"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />


            <TextView
                android:layout_below="@id/recImage6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recTitle6"
                android:text="Manage Notification"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/Card6"
        android:id="@+id/logoutcard"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/grocImage"
                android:src="@drawable/ic_baseline_login_24"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />


            <TextView
                android:layout_below="@id/grocImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logoutcard1"
                android:text="Logout"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>